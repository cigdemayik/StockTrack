@{ Layout = "~/Views/Shared/_Layout.cshtml";
@model List<StockTrack.WebUI.Models.ProductModels.ProductModel>;
}
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            Admin Ürünler
            @Html.ActionLink("Ekle", "ProductCreate", "Home", null, new { @class = "btn btn-primary float-right" })
        </div>
        @if (Model.Count <= 0)
        {
<p class="text-center">Hiç Veri Yok</p> }
else
{
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <td>Id</td>
                    <th>İsim</th>
                    <th>Miktar</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>
                        @Html.ActionLink("Güncelle", "ProductUpdate", "Home", new { id = item.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Sil", "ProductDelete", "Home", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
}

            </tbody>
        </table>
    </div>
</div>}

    </div>

</div>