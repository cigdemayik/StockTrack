@{ Layout = "~/Views/Shared/_Layout.cshtml";
@model StockTrack.WebUI.Models.ProductModels.ProductCreateModel;
}

@using (Html.BeginForm("ProductCreate", "Home",FormMethod.Post))
{
@Html.ValidationSummary(true)

<div class="card">
    <div class="card-header">
        Product
    </div>
    <div class="card-body">

        <div class="form-group">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
        </div>
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</div>
}
