@{ Layout = "~/Views/Shared/_Layout.cshtml";
@model StockTrack.WebUI.Models.ProductModels.ProductUpdateModel;
}
@using (Html.BeginForm("ProductUpdate", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.ValidationSummary(true)

                <div class="card">
                    <div class="card-header">
                        Product
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" value="@Model.Id" />
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "col-sm-3" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-user" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Quantity, new { @class = "col-sm-3" })
                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control form-control-user" })
                            @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
                        </div>

                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </div>
                }