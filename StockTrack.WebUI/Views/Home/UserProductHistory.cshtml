@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model List<StockTrack.WebUI.Models.UserProductHistoryModels.UserProductHistoryModel>
}
@using (Html.BeginForm("UserProductHistory", "Home", FormMethod.Get))
{
    <div class="container-fluid">

        <div class="card shadow mb-4">

            @if (Model.Count <= 0)
            {
                <p class="text-center">Hiç Veri Yok</p> }
            else
            {
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>İşlem</th>
                                    <th>İşlem Tarihi</th>
                                    <th>Fiyat</th>
                                    <th>Miktar</th>
                                    <th>Ürün Adı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>

                                        @if (((int)item.Operation) == 1)
                                        {
                                            <td>"Satış"</td>

                                        }
                                        else
                                        {
                                            <td>"Alış"</td>
                                        }
                                        <td>@item.OperationDate</td>
                                        <td>@item.Price</td>
                                        <td>@item.UserProduct.Quantity</td>
                                        <td>@item.UserProduct.Product.Name</td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>}
        </div>

    </div>
}
